{% extends "/exshipper/exshipper_base.html"%} {% block main_content %}

<script type="text/javascript">
	window.onload = function() {
		history.pushState(null, null, location.href);
		window.onpopstate = function(event) {
			history.go(1);
		};
	};

	$(function() {
		$("#hrefPrint").click(function() {
			// Print the DIV.
			$("#print_div").print();
			return (false);
		});
	});
</script>

<div
	style="text-align:center; margin: 0px auto; position: fixed; width: 100%; background-color: #fff; z-index: 100;">
	<p style="font-size: 26px;">ExShipper Taiwan Custom Entry Invoice Log</p>
	<input id="hrefPrint" type="button" value="Print Invoice" />
	<hr>
</div>


<div id="print_div" style="position: absolute; top: 150px; width: 100%; text-align: center; margin: auto;">

	{% if spearnet_customer_package_info_log %}
	<div id="spearnet_packages_invoice_log"
		style="width: 100%; text-align: center; margin: auto;"></div>
	<!-- spearnet -->
	{% for single_row_data in spearnet_customer_package_info_log %}
	<script type="text/javascript">
		var img_id = '{{ single_row_data.signature_img_id }}';
		var package_suda_number = '{{ single_row_data.hawb }}';
		if (img_id !== 'None' || img_id !== '') {
			$('#spearnet_packages_invoice_log')
					.append(
							'<form style="width:1000px; height: 1200px; margin: 10px auto; border: 1px solid; display:inline-block; text-align: center;">'
									+ '<p style="font-weight:bold; font-size:20px;">ExShipper Shipping Invoice Document</p>'
									+ '<p style="font-weight:bold; font-size:18px;">Shipper\'s Information</p>'
									+ '<p style="font-weight:bold; font-size:15px;">Client Signature</p>'
									+ '<img style="height: 100px;" src="/img?entity_id={{ single_row_data.signature_img_id }}"/>'
									+ '<p>Company / Personal Name: {{single_row_data.shipper_company | e | title}} / {{single_row_data.shipper_person | e | title}} </p>'
									+ '<p>Phone: {{ single_row_data.shipper_tel }}</p>'
									+ '<p>Address: {{ single_row_data.shipper_address_english|e }}</p>'
									+ '<p style="font-weight:bold; font-size:18px;">Consignee\'s Information</p>'
									+ '<p>SUDA Tracking Number: {{ single_row_data.hawb }}</p>'
									+ '<p>Ref. Number: {{ single_row_data.reference_number }}</p>'
									+ '<p>Name(Chinese) : {{ single_row_data.consignee_name_chinese|e }}</p>'
									+ '<p>Address(Chinese) : {{ single_row_data.consignee_address_chinese|e }}</p>'
									+ '<p>Name(English) : {{ single_row_data.consignee_name_english }}</p>'
									+ '<p>Phone: {{ single_row_data.consignee_tel }}</p>'
									+ '<p>Address(English) : {{ single_row_data.consignee_address_english|e }}</p>'
									+ '<p>Weight (kg): <input value="{{ single_row_data.weight_kg }}" style="color:#000; border:1px solid; text-align:center;" /></p>'
									+ "<p>Shipping Date: {{ single_row_data.create_date_time.strftime('%Y-%m-%d') }} (UTC)</p>"
									+ '<p style="font-weight:bold; font-size:20px;">Detail</p>'
									+ '<p>($ = USD)</p>'
									+ '<div id="commodity_{{ single_row_data.hawb }}"></div>'
									+ '</form>');

			var items = JSON.parse('{{ single_row_data.commodity_detail }}')['items'];
			var total_quan = 0;
			var total_price = 0;
			$
					.each(
							items,
							function(ith, obj) {
								$('#commodity_{{ single_row_data.hawb }}')
										.append(
												'<p><span style="font-weight: bold;">Item-'
														+ (ith + 1)
														+ '</span> <span> Commodity Name: <input value = "'+obj.name+'" ; style="color:#000; background-color:#fff; border:1px solid; text-align:center; width: 350px;"/></span>'
														+ '<span> Quantity: <input value = "' + obj.quan + '" ; style="color:#000; background-color:#fff; border:1px solid; text-align:center; width: 50px;" /></span>'
														+ '<span> Unit Price: <input value = "$' + obj.price.toFixed(2) +'" ; style="color:#000; background-color:#fff; border:1px solid; text-align:center; width: 50px;" /></span>'
														+ '<span> Subtotal: <input value = "$'
														+ (Number(obj.quan) * Number(obj.price)).toFixed(2)
														+ '" ; style="color:#000; background-color:#fff; border:1px solid; text-align:center; width: 65px;" ; disabled/></span>'
														+ ' </p>');
								total_quan += Number(obj.quan);
								total_price += Number(obj.quan)
										* Number(obj.price);
							});
			$('#commodity_{{ single_row_data.hawb }}').append(
					'<p><span>Total Quantity: ' + total_quan
							+ '</span> <span>Total Price: $' + total_price.toFixed(2)
							+ '</span> </p>');
		}
	</script>
	{% endfor %} {% else %}
	<p>No Data Available</p>
	{% endif %}
	<!-- end -->

