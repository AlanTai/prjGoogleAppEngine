	//onclick
	function selectOrRemove(elem) {
		var select_status = $(elem).find('input').attr('value');
		var elem_name = $(elem).attr('name');
		if (select_status === 'Remove') {
			$(elem).find('input').val('Select');
			$('#packages_labels> form[id="label_' + elem_name + '"]').css({
				'display' : 'none'
			});
		} else {
			$(elem).find('input').val('Remove');
			$('#packages_labels> form[id="label_' + elem_name + '"]').css({
				'display' : 'inline-block'
			});
		}
	}
	
	//remove labels
	$(function(){
		$('#packages_info > form').find('input[type=button]').each(function(){
			$(this).val('Select');
		});
		
		$('#packages_labels > form').each(function(){
			$(this).css({
				'display' : 'none'
			});
		});
	});
	
	//show all labels
	function showAllLabels(){
		$('#packages_info > form').find('input[type=button]').each(function(){
			$(this).val('Remove');
		});
		
		$('#packages_labels > form').each(function(){
			$(this).css({
				'display' : 'inline-block',
				'margin' : '8px 8px'
			});
		});
	}
	
	//remove all labels
	function removeAllLabels(){
		$('#packages_info > form').find('input[type=button]').each(function(){
			$(this).val('Select');
		});
		
		$('#packages_labels > form').each(function(){
			$(this).css({
				'display' : 'none'
			});
		});
	}
	
	//auot-scroll to searched item
	$('#search_package_info').click(function() {
		try{
			var suda_tracking_number = $('#suda_tracking_number').val();
			$('html, body').animate({
				scrollTop : $("#form_" + suda_tracking_number ).offset().top - 300
			}, 800);
		}
		catch(err){
			console.log('No such information in the SUDA tracking numbers\' array; Error Message: ' + err);
		}
		
	});

	//autocomplete
	$("#suda_tracking_number").autocomplete({
		source : suda_tracking_numbers_ary
	});
	//end
</script>

